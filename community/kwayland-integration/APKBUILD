# Maintainer: Bhushan Shah <bshah@kde.org>
pkgname=kwayland-integration
pkgver=5.17.2
pkgrel=0
pkgdesc="KWayland integration"
url="https://www.kde.org/workspaces/plasmadesktop/"
arch="all"
license="LGPL-2.1-only OR LGPL-3.0-only"
depends="kwayland kglobalaccel kidletime"
makedepends="cmake extra-cmake-modules qt5-qtbase-dev kwayland-dev kwindowsystem-dev kidletime-dev kguiaddons-dev"
source="https://download.kde.org/stable/plasma/$pkgver/kwayland-integration-$pkgver.tar.xz"
options="!check" # Broken

prepare() {
	default_prepare

	mkdir "$builddir"/build
}

build() {
	cd "$builddir"/build
	cmake "$builddir" \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	make
}

package() {
	cd "$builddir"/build
	DESTDIR="$pkgdir" make install
}

sha512sums="d10c2973ec6eae1283be31a15ab977948430a458f535d3ce9760f6d73f2254e96a743a7e59185782a99d39e37099edd33a319402f1dd17aa18ef98f5fbb0e9a5  kwayland-integration-5.17.2.tar.xz"
