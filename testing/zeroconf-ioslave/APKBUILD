# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=zeroconf-ioslave
pkgver=19.08.3
pkgrel=0
arch="all"
url="https://www.kde.org/applications/internet/"
pkgdesc="Network Monitor for DNS-SD services (Zeroconf)"
license="GPL-2.0-or-later AND LGPL-2.0-only AND GFDL-1.2-only"
makedepends="extra-cmake-modules qt5-qtbase-dev kdbusaddons-dev kdnssd-dev ki18n-dev kio-dev"
source="https://download.kde.org/stable/applications/$pkgver/src/$pkgname-$pkgver.tar.xz"
subpackages="$pkgname-lang"
options="!check" # No tests

build() {
	cmake \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	make
}

check() {
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	DESTDIR="$pkgdir" make install
}

sha512sums="24b7e3f581b99a6305b2fe688c9ace69a7b2ecfc4c7226875b23d2e91b03af1f3dde648c731a25b1bdc091ebadf780a3a06c8cafa051be2579e7a4a65d7d8f43  zeroconf-ioslave-19.08.3.tar.xz"
