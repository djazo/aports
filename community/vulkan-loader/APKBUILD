# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=vulkan-loader
_pkgname=Vulkan-Loader
pkgver=1.1.126
pkgrel=0
arch="all"
url="https://www.khronos.org/vulkan"
pkgdesc="Vulkan Installable Client Driver (ICD) Loader"
license="Apache-2.0"
depends_dev="vulkan-headers"
makedepends="$depends_dev cmake python3 libx11-dev wayland-dev libxrandr-dev"
source="vulkan-loader-$pkgver.tar.gz::https://github.com/khronosgroup/vulkan-loader/archive/v$pkgver.tar.gz"
subpackages="$pkgname-dev"
options="!check" # No tests
builddir="$srcdir/$_pkgname-$pkgver"

build() {
	cmake \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DCMAKE_INSTALL_SYSCONFDIR=/etc \
		-DCMAKE_INSTALL_DATADIR=share \
		-DCMAKE_SKIP_RPATH=True
	make
}

package() {
	DESTDIR="$pkgdir" make install
}

sha512sums="ff2057ad52be3b29b02023a4d718c22bdf09e9c522e723590f4e84ee1ba605250ff100560f6b962ec70d119e8319f2d53d52041b20753e44ace34d10a0d9c7af  vulkan-loader-1.1.126.tar.gz"
