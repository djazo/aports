pkgname=re2
pkgver=2019.11.01
_pkgver=${pkgver//./-}
pkgrel=0
pkgdesc="Efficient, principled regular expression library"
url="https://github.com/google/re2"
arch="all"
license="BSD-3-Clause"
subpackages="$pkgname-dev"
provides="libre2"
source="$pkgname-$pkgver.tar.gz::https://github.com/google/$pkgname/archive/$_pkgver.tar.gz"
builddir="$srcdir"/$pkgname-$_pkgver

build() {
	make
}

check() {
	make test
}

package() {
	make DESTDIR="$pkgdir" prefix=/usr install
}

sha512sums="0ddc616936e6de2991b05c9976c68995e0d0cffc3712ce273c7572c3e78cb380f5680efe48eaf145c5b4f13a066ceea3432fa111622687a0916859007fc4e46f  re2-2019.11.01.tar.gz"
