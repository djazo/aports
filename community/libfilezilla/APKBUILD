# Maintainer: Leonardo Arena <rnalrd@alpinelinux.org>
# filezilla needs to be rebuilt when libfilezilla version changes, ABI is not stable
pkgname=libfilezilla
pkgver=0.19.0
pkgrel=0
pkgdesc="C++ library for filezilla"
url="https://filezilla-project.org"
arch="all"
license="GPL-2.0-or-later"
makedepends="cppunit-dev gettext gnutls-dev nettle-dev"
subpackages="$pkgname-dev $pkgname-lang"
source="https://download.filezilla-project.org/libfilezilla/libfilezilla-$pkgver.tar.bz2"

build() {
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--disable-static
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="a652c996e7c924d7c3a5c3da69ed396e19ebaebf98e8553ed8e1a718f5dff412e3dfec46b0008784c342a8443a0e7e34764211218d88a0888fece89edc582deb  libfilezilla-0.19.0.tar.bz2"
