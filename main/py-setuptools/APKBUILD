# Contributor: Andrew Manison <amanison@anselsystems.com>
# Maintainer: Fabian Affolter <fabian@affolter-engineering.ch>
pkgname=py-setuptools
_pkgname=${pkgname#py-}
pkgver=42.0.0
pkgrel=0
pkgdesc="A collection of enhancements to the Python distutils"
url="https://pypi.python.org/pypi/setuptools"
arch="noarch"
license="MIT"
depends="python2"
makedepends="python3"
provides="py2-setuptools=$pkgver-r$pkgrel"
options="!check" #no testsuite
subpackages="py3-$_pkgname:_py3"
source="$_pkgname-$pkgver.tar.gz::https://github.com/pypa/$_pkgname/archive/v$pkgver.tar.gz"
builddir="$srcdir"/$_pkgname-$pkgver

prepare() {
	python2 bootstrap.py
	python3 bootstrap.py
}

build() {
	python2 setup.py build
	python3 setup.py build
}

package() {
	python2 setup.py install --prefix=/usr --root="$pkgdir"
	# we don't provide a non-suffixed easy_install
	rm -f "$pkgdir"/usr/bin/easy_install
}

_py() {
	local python="$1"
	pkgdesc="$pkgdesc (for $python)"
	depends="$python"
	install_if="$pkgname=$pkgver-r$pkgrel $python"

	cd "$builddir"
	$python setup.py install --prefix=/usr --root="$subpkgdir"
	# we don't provide a non-suffixed easy_install
	rm -f "$subpkgdir"/usr/bin/easy_install
}

_py3() {
	replaces="python3"
	_py python3
}


sha512sums="23868672953499106103e33425f9c4cd84b1e0408218ac27c03a3f8fda8c1c739b015c615dcc95b0fde89eedcb31957059656b677cd36cd558bd8307f451efcf  setuptools-42.0.0.tar.gz"
